{
  "name": "express-barefoot-nomad",
  "version": "1.0.0",
  "description": "Making company travel and accomodation easy and convinient",
  "main": "index.js",
  "nyc": {
    "exclude": [
      "src/migrations",
      "src/database",
      "src/tests",
      "src/config",
      "src/services/files.service.js",
      "src/utils/echo.util.js",
      "src/routes/index.js",
      "src/app.js"
    ]
  },
  "scripts": {
    "test": "NODE_ENV=test nyc mocha -r dotenv/config --require @babel/register \"./src/tests/**/*.js\" --timeout 150000 --exit",
    "pretest-travis": "NODE_ENV=test npm run migrate:undo && NODE_ENV=test npm run migrate",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "start": "node -r dotenv/config dist/app.js",
    "migrate": "babel-node ./src/scripts/migrate",
    "db:seed": "babel-node ./src/scripts/seed",
    "db:seed:undo": "babel-node ./src/scripts/seed-rollback",
    "migrate:undo": "babel-node ./src/scripts/rollback",
    "db:migrate": "node ./dist/scripts/migrate",
    "db:migrate:undo": "node ./dist/scripts/rollback",
    "watch": "npm run winston && nodemon --exec babel-node -r ./node_modules/dotenv/config ./src/app.js",
    "build": "babel src -d dist",
    "lint": "eslint --fix ./",
    "winston": "babel-node ./src/utils/winston.js"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "@sendgrid/mail": "^6.4.0",
    "aws-sdk": "^2.580.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "child-process-promise": "^2.2.1",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "ejs": "^2.6.1",
    "errorhandler": "^1.5.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "jsonwebtoken": "^8.5.1",
    "lodash.merge": "^4.6.2",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "nodemon": "^1.19.4",
    "on-finished": "^2.3.0",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "pug": "^2.0.4",
    "request": "^2.87.0",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.5.1",
    "socket.io": "^2.3.0",
    "supertest": "^4.0.2",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2",
    "twilio": "^3.39.4",
    "underscore": "^1.9.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "form-data": "^3.0.0",
    "mock-express-request": "^0.2.2",
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "^7.6.2",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.7",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "node-mocks-http": "^1.8.0",
    "nyc": "^14.1.1",
    "socket.io-client": "^2.3.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint",
      "git add"
    ]
  }
}
